{
  "name": "acine-proto",
  "version": "1.0.0",
  "description": "multilang output for acine protos",
  "main": "index.js",
  "scripts": {
    "prepare:py": "cd ./dist/py && pnpm i",
    "prepare:ts": "cd ./dist/ts && pnpm i",
    "prepare": "concurrently -n \"py,ts\" -c \"bgBlue.bold,bgCyan.bold\" \"npm run prepare:py\" \"npm run prepare:ts\"",
    "build:py": "cd ./dist/py && npm run build",
    "build:ts": "cd ./dist/ts && npm run build",
    "build": "concurrently --kill-others-on-fail -n \"py,ts\" -c \"bgBlue.bold,bgCyan.bold\" \"npm run build:py\" \"npm run build:ts\"",
    "test:py": "cd ./dist/py && npm test",
    "test:ts": "cd ./dist/ts && npm test",
    "test": "concurrently --kill-others-on-fail -m 1 -n \"py,ts\" -c \"bgBlue.bold,bgCyan.bold\" \"npm run test:py\" \"npm run test:ts\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
